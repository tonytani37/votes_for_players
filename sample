// GETリクエストを送信

// APIのURLを定義
const apiUrl = 'https://api.example.com/data';

// GETリクエストを送信
fetch(apiUrl)
  .then(response => {
    // ネットワークエラーをチェック
    if (!response.ok) {
      throw new Error('Network response was not ok');
    }
    // レスポンスをJSONとしてパース
    return response.json();
  })
  .then(data => {
    // 取得したデータをコンソールに表示
    console.log(data);
  })
  .catch(error => {
    // エラーハンドリング
    console.error('There has been a problem with your fetch operation:', error);
  });

  // postリクエストを送信

  // APIのURLを定義
const apiUrl = 'https://api.example.com/data';

// 送信するデータをオブジェクトとして定義
const postData = {
  name: 'John Doe',
  age: 30
};

// リクエストオプションを定義
const requestOptions = {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json'
  },
  body: JSON.stringify(postData) // データをJSON文字列に変換
};

// POSTリクエストを送信
fetch(apiUrl, requestOptions)
  .then(response => {
    if (!response.ok) {
      throw new Error('Network response was not ok');
    }
    return response.json();
  })
  .then(data => {
    console.log('Success:', data);
  })
  .catch(error => {
    console.error('Error:', error);
  });